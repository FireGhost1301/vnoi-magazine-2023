    \autoSetBackground
    
    % \pagecolor[rgb]{0,0,0}
    % \color[rgb]{1,1,1}
    
    \vfill
    \part*{#1}
    #2
    \begin{flushright}
        \textrm{
            \textit{#3 \\ \authorInfo}
        }
    \end{flushright}
    \addcontentsline{toc}{part}{\protect\numberline{}#1}
    \vfill
    
    % \addtocontents{toc}{#1}
    
