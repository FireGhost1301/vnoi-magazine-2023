\setlength{\columnsep}{0.8cm}
\newenvironment{article}[3]{
    \pagestyle{fancy}
    \ifodd\value{page}\null\newpage\fi%
    \fancyhead{}
    \lhead{#1}
    \rhead{\textit{#3}}
    
    ~\thispagestyle{empty}
    
    \pagecolor[rgb]{0,0,0}
    \color[rgb]{1,1,1}
    
    \vfill
    \part*{#1}
    #2
    \begin{flushright}
        \textit{~-- #3}
    \end{flushright}
    \vfill
    
    \pagebreak
    
    \pagecolor[rgb]{1,1,1}
    \color[rgb]{0,0,0}
    
    \everymath={\displaystyle}
    \begin{multicols}{2}
}{
    \vfill
    \end{multicols}
    \pagebreak
}

\newcommand{\interview}[3]{
    \begin{article}{#1}{Interviewer: #2}{}
        \input{#3}
    \end{article}
}

