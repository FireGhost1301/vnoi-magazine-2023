\newcommand{\setCoverImage}[1]{\includepdf{#1}}
\newcommand{\includeImage}[2]{%
    \begin{center}
        \includegraphics[width=0.9\linewidth]{#1} \\
        \textit{#2}
    \end{center}
}

\setlength{\columnsep}{0.8cm}
\newenvironment{article}[2]{
    \pagestyle{fancy}
    \ifodd\value{page}\null\newpage\fi%
    \fancyhead{}
    \lhead{#1}
    \rhead{\textit{#2}}
    
    ~\thispagestyle{empty}
    \vfill
    \part*{#1}
    \begin{flushright}
        \textit{~-- #2}
    \end{flushright}
    \vfill
    
    \pagebreak
    
    \everymath={\displaystyle}
    \begin{multicols}{2}
}{
    \end{multicols}
    \pagebreak
}

